<%= form_with url: search_posts_path, method: :post, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :text, class: "block text-gray-700 font-medium mb-2" %>
    <%= form.text_area :text, rows: 5, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= form.submit "Translate", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>
